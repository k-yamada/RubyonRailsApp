<%= form_for @project do |f| %>

<p>
  <%= f.label :title, "社員名　 :" %>
  <%= f.text_field :title %>
  <% if @project.errors.any? %>
  <%= @project.errors.messages[:title][0] %>
  <% end %>
  <br>
  <%= f.label :stuffnum, "社員番号:" %>
  <%= f.number_field :stuffnum %>
</p>

<p>
  <%= f.submit :内容を保存する %>
</p>

<% end %>
